<UserControl x:Class="JKECSharpUI.AccountAccessControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" 
                   FontSize="12" FontWeight="Bold">Account Access</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0">Username:</TextBlock>
        <TextBox Name="UserTextBox" Grid.Row="2" Grid.Column="1"/>
        <TextBlock Grid.Row="4" Grid.Column="0">Password:</TextBlock>
        <PasswordBox Name="PasswordBox" Grid.Row="4" Grid.Column="1"/>
        <Button Grid.Row="6" Grid.Column="1" Click="Login_Click" IsDefault="True">Login</Button>
    </Grid>
</UserControl>
